{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "composite": true,
    "declaration": true,
    // "declarationMap": true,
    // "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@painter/*": ["packages/*/src/index.ts"]
    },
    "noImplicitAny": false,
    "types": ["vitest/globals"]
  },
  "exclude": ["node_modules", "dist"]
}
